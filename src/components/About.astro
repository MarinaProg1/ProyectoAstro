<style>
  #about {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 100vw;
    font-size: 16px;
    height: 100%;
  }
  .content-about{
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 20px;
    background-color: rgba(145, 131, 168, 0.123);
    border-left: 2px solid #14dcb4;
    padding: 20px 10px 10px 10px;
    width: 80%;
    gap: 10px;
  }
  .text{
    margin: 10px;
    padding: 10px;
    width: 70%;
    height: 80%;
    text-align:start;
    animation: irIzquierda 2s ease forwards;
  }
  .imagen{
    background-color:#faf6f68f;
    width: 200px;
    height: 200px;
    margin: 15px;
    border-radius: 50%;
    overflow: hidden;
    animation: irDerecha 2s ease forwards;
  }
.imagen img{
  width: 100%;
  height: 100%;
}

@keyframes irDerecha {
  100%{
    transform: translateX(0);
  }
}
  @keyframes irIzquierda {
  100%{
    transform: translateX(0);
  }
}


 @media (max-width: 768px) {
  .about{
    flex-direction: column;
    width: 100%;
   
  }
  .content-about{
    flex-direction: column;
  }
.text{
    width: 95%;
    height: 95%;
    text-align: center;
    padding: 10px;
  }
.imagen{
  width: 100px;
  height: 100px;
  margin: 5px;
}
  
 }
</style>
<script is:client:true;>
  const elementos = document.querySelectorAll(".aparece");

  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.add("visible"); // se muestra
      }
    });
  }, {
    threshold: 0.2 // se activa cuando el 20% del elemento es visible
  });

  elementos.forEach(el => observer.observe(el));
</script>
