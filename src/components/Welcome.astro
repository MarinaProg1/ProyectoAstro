---
import Avatar from "./Avatar.astro";
import TituloPres from "./TituloPres.astro";
---

<section class="welcome">
  <TituloPres />
  <Avatar />
</section>
<style>
  .welcome {
    padding-top: 70px;
    display: flex;
    width: 100%;
    max-width: 1200px; /* no crece más allá de este tamaño */
    height: 100vh;

    /*width: 80vw;
    height: 100%;*/
    padding: 10px;
    margin-top: 20px;
    justify-content: center;
    align-items: center;
    text-align: center;
  }
  @media screen and (max-width: 768px) {
    .welcome {
      flex-direction: column;
    }
  }
</style>
