---
import Layout from "../layouts/Layout.astro"
import Avatar from "./Avatar.astro"
import TituloPres from "./TituloPres.astro"
---

  <Layout>
    <div class="welcome">
       <TituloPres/>
       <Avatar/>
    </div>
</Layout>
<style>
  .welcome{
    display: flex;
    width: 80vw;
    height: 100%;
    padding: 15px;
    margin-top: 40px;
    margin-bottom: 30px;
    justify-content: center;
    align-items: center;
    text-align: center;
  }
   @media screen and (max-width: 768px) {
    .welcome{
      flex-direction:column ;
    }
  }
  </style>
  