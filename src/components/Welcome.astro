---
import Avatar from "./Avatar.astro";
import TituloPres from "./TituloPres.astro";
---

<section class="welcome">
  <TituloPres />
  <Avatar />
</section>
<style>
  .welcome {
    margin-top: 30px;
    display: flex;
    width: 95vw;
    /*max-width: 1200px; */
    height: 50%;
    padding: 0 10px 0 10px;
    justify-content: center;
    align-items: center;
    text-align: center;
  }
  @media screen and (max-width: 768px) {
    .welcome {
      padding-top: 10px;
      height: 100%;
      flex-direction: column;
    }
  }
</style>
