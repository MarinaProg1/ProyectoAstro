---
import Lenguaje from "../components/Lenguaje.astro";

interface LenguajeType {
  name: string;
}

interface Props {
  src: string;
  titulo: string;
  descripcion: string;
  lenguajes?: LenguajeType[];
  href: string;
}
const { src, titulo, descripcion, lenguajes = [], href } = Astro.props;
---

<script src="/src/scripts/app.js"></script>

<div class="cardPro aparece">
  <img src={src} alt={titulo} />
  <h2>{titulo}</h2>
  <p>{descripcion}</p>

  <div class="lenguajes">
    {lenguajes.map((l) => <Lenguaje name={l.name} />)}
  </div>
  <a href={href} target="_blank" rel="noopener noreferrer">Ver codigo</a>
</div>

<style>
  h2 {
    color: #e3e7b8;
    font-size: 1.4rem;
  }
  p {
    margin-top: 2px;
  }
  .cardPro {
    display: flex;
    flex-direction: column;
    justify-content: start;
    align-items: center;
    border-radius: 20px;
    border-left: 2px solid #14dcb4;
    background-color: rgba(145, 131, 168, 0.123);
    box-shadow: 4px 4px 10px rgba(37, 37, 37, 0.384);
    color: #e3e7b8;
    width: 45%;
    height: 370px;
    margin: 40px 20px 5px 5px;
  }
  .cardPro img {
    width: 100%;
    height: 48%;
    border-radius: 20px 20px 0 0;
    filter: brightness(0.8);
  }
  .lenguajes {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 5px;
  }
  .aparece {
    opacity: 0;
    transform: translateY(50px);
    transition: all 0.7s ease-out;
  }

  .aparece.visible {
    opacity: 1;
    transform: translateY(0);
  }
  @media (max-width: 768px) {
    .cardPro {
      width: 100%;
    }
    .lenguajes {
      display: flexbox;
    }
  }
</style>
