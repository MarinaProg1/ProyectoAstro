---
import Lenguaje from "../components/Lenguaje.astro";

interface LenguajeType {
    href: string;
    name:string;
}

interface Props {
    href: string;
    titulo: string;
    descripcion: string;
    lenguajes?: LenguajeType[];
}
 const {href,titulo,descripcion,lenguajes=[]} = Astro.props;
---
<div class="cardPro">
    <img src={href} alt={titulo}>
    <h2>{titulo}</h2>
    <p>{descripcion}</p>

    <div class="lenguajes">
    {lenguajes.map((l) => (
      <Lenguaje href={l.href} name={l.name} />
    ))}
  </div>
    
</div>

<style>
    h2{
        color: crimson;
        font-size: 2rem;
    }
    .cardPro{
        display: flex;
        flex-direction: column;
        justify-content: start;
        align-items: center;
        /*border: 1px solid #3d3b3c;*/
        border-radius: 20px;
        background-color: rgba(228, 225, 231, 0.014);
        box-shadow: 4px 4px 10px rgba(37, 37, 37, 0.384);
        color: #e3e7b8;
        width: 46%;
        height: 400px;
        margin: 40px 20px 5px 5px;

    }
    .cardPro img{
        width: 100%;
        height: 48%;
        border-radius: 20px 20px 0 0;
         filter: brightness(0.8);
    }
    .lenguajes{
        display: flex;
        align-items: center;
        gap:5px;
    }
    @media (max-width: 768px) {
        .cardPro{
            width: 100%;
        }
    }
</style>