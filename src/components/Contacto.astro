<script src="/src/scripts/app.js"></script>
<section id="contact">
  <h2 class="aparece">CONTACTO</h2>
  <div class="contenedor">
    <div class="form">
      <img src="/images/imagenPie.svg" alt="Imagen descorativa" />
    </div>
    <form
      id="contact-form"
      action="https://formsubmit.co/83665ba2c67d1adb3a6ff6d594614991"
      method="POST"
    >
      <div class="input-group">
        <label for="name"></label>Nombre

        <input
          type="text"
          name="name"
          id="name"
          placeholder="Nombre"
          required
        />
        <label for="email">Email</label>
        <input
          type="email"
          name="email"
          id="email"
          placeholder="Email"
          required
        />
        <label for="message">Mensaje</label>
        <textarea
          name="message"
          id="message"
          cols="30"
          rows="5"
          placeholder="Mensaje"
          required></textarea>
        <input class="btn" type="submit" value="Enviar" />
        <p id="mensaje-enviado" class="oculto">
          Â¡Gracias! Tu mensaje fue enviado correctamente.
        </p>

        <!--<input
          type="hidden"
          name="_next"
          value="https://porfolioastro.netlify.app/#contactame"
        />-->
        <input type="hidden" name="_captcha" value="false" />
      </div>
    </form>
  </div>

  <div class="cv">
    <img src="/images/archivo.png" alt="Icono de descarga" />
    <a href="/src/assets/miCv.pdf" download> Descarga mi CV</a>
  </div>
</section>

<style>
  #contact {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 100vw;
    height: 100%;
    margin-top: 60px;
  }

  form {
    padding: 50px 55px;
    width: 40%;
    height: 100%;
    color: beige;
  }
  img {
    width: 400px;
    height: 500px;
  }
  .contenedor {
    display: flex;
    justify-content: center;
    background-color: rgba(145, 131, 168, 0.123);
    border-radius: 10px;
    width: 65%;
    border-left: 2px solid #14dcb4;
    position: relative;
  }

  .input-group {
    display: flex;
    flex-direction: column;
    text-align: left;
  }
  input,
  textarea {
    padding: 17px 25px;
    border-radius: 10px;
    margin-bottom: 20px;
    outline: none;
  }
  .btn {
    background: rgb(35, 75, 150);
    color: beige;
    font-size: 1.2rem;
  }
  .btn:hover {
    transform: scale(1.1);
    background: blue;
  }
  .oculto {
    display: none;
  }

  #mensaje-enviado {
    color: #14dcb4;
    font-size: 1.2rem;
    margin-top: 20px;
    text-align: center;
  }
  .cv {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin: 20px;
  }
  .cv img {
    width: 40px;
    height: 40px;
  }

  @media (max-width: 768px) {
    .contenedor {
      width: 90%;
      justify-content: center;
      align-items: center;
    }

    .form {
      position: absolute;
      inset: 0;
      display: flex;
      justify-content: center;
      align-items: center;
      z-index: 1;
    }

    .form img {
      width: 300px;
      height: auto;
    }

    form {
      position: relative;
      z-index: 2;
      width: 100%;
      padding: 30px;
    }
  }
</style>
